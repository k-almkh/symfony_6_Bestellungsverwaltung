{% extends "base.html.twig" %}

{% block title %}Benutzer {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>E-Mail</th>
                    <th>Firma</th>
                    <th>Produkte</th>
                    <th>Actionen</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.email}}</td>
                    <td>{{user.company.name}}</td>
                    <td>
                        <ul class="list-group list-group-flush">
                        {% set farbe = ['', 'primary', 'secondary', 'success', 'danger', 'warning', 'info' ] %}
                        {% for key , item in user.company.products %}
                            <li class="list-group-item list-group-item-{{random(['', 'primary', 'secondary', 'success', 'danger', 'warning', 'info'])}}">{{item.name}}</li>
                        {% endfor %}
                            
                        </ul>
                    </td>
                    <td><a href="{{ path('product_add', {'company' : user.company.id}) }}" >Produkt anlegen</a></td>
                </tr>
            {% endfor %}
            </tbody>
            </table>
        </div> 
    </div>
{% endblock %}